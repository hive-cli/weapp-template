{
  "name": "weapp-template",
  "version": "1.0.0",
  "description": "## 已整合功能",
  "main": ".prettierrc.js",
  "scripts": {
    "lint:script": "eslint . --ext .js,.wxs,.sjs",
    "lint:style": "stylelint \"**/*.{css,scss,wxss}\"",
    "lint:script:fix": "eslint --fix . --ext .js,.wxs,.sjs",
    "lint:style:fix": "stylelint --fix \"**/*.{css,scss,wxss}\"",
    "lint:all": "npm-run-all -s lint:script lint:style",
    "prettier:fix": "prettier --config .prettierrc.js --write './**/*.{js,sjs,wxs,css,wxss,acss,wxml,axml,less,scss,json}'",
    "lint:all:fix": "npm-run-all -s prettier:fix lint:script:fix lint:style:fix",
    "prepare": "husky install",
    "commit": "git-cz",
    "lint-staged": "lint-staged"
  },
  "lint-staged": {
    "**/*.{js,wxs,sjs}": "npm run lint:script",
    "**/*.{css,scss,wxss}": "npm run lint:style"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hive-cli/weapp-template.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/hive-cli/weapp-template/issues"
  },
  "homepage": "https://github.com/hive-cli/weapp-template#readme",
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "babel-eslint": "^10.1.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.32",
    "prettier": "^3.1.0",
    "prettier-eslint-cli": "^8.0.1",
    "stylelint": "^15.11.0",
    "stylelint-config-prettier": "^9.0.5",
    "stylelint-config-recess-order": "^4.4.0",
    "stylelint-config-standard": "^34.0.0",
    "stylelint-config-standard-scss": "^11.1.0",
    "stylelint-prettier": "^4.1.0"
  }
}
